@model AppointmentModel

<h2>Delete Appointment</h2>

<p>Are you sure you want to delete this appointment for <strong>@Model.Patient?.Name</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="AppointmentId" />
    <button type="submit" class="btn btn-danger" @Url.Action("Delete","Appointment",new{id=Model.AppointmentId})>Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>